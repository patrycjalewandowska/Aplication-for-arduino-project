<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppArduino.WaterPage"
             Title="Woda"
             >

    <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,2*">
        <Button Grid.Row="0" Grid.Column="0" BackgroundColor="White" Text="Poziom 1" Clicked="OnLevel1_WaterPage"/>
        <Button Grid.Row="0" Grid.Column="1" BackgroundColor="Pink" Text="Schemat wypełniony częscią bloków"/>
        <Button Grid.Row="1" Grid.Column="0" BackgroundColor="White" Text="Poziom 2" Clicked="OnLevel2_WaterPage"/>
        <Button Grid.Row="1" Grid.Column="1" BackgroundColor="Pink" Text=" Wszystkie bloki do uzupełnienia"/>
        <Button Grid.Row="2" Grid.Column="0" BackgroundColor="White" Text="Poziom 3"/>
        <Button Grid.Row="2" Grid.Column="1" BackgroundColor="Pink" Text="Osobny wybór bloków i opisu (jak starczy czasu)"/>
    </Grid>
    
</ContentPage>